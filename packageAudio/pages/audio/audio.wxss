
.hot-view {
  margin-top: 20rpx;
  background: #fff;
}

.hot-view .tab {
 
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  /* border-bottom: 1px solid #e0e3da; */
}

.hot-view .tab view {
  flex: 1 1 auto;
  text-align: center;
  display: flex;
  height: 100%;
  justify-content: left;
}

.hot-view .tab text {
  width: 172rpx;
  height: 100%;
  font-weight: bold;
  color: #666;
  font-size: 26rpx;
  text-align: center;
}

.hot-view .tab .active {
  font-size: 30rpx;
  text-align: center;
  font-weight: bold;
  color: #1287FF;
  border-bottom: 3px solid  #1287FF;
}
