.view-box {
  width: 100%;
}

.view {
  margin-top: 24rpx;
}

.view .img {
  margin-left: 18rpx;
  position: relative;
  width: 96%;
  height: 450rpx;
}

.view .img image {
  width: 100%;
  height: 100%;
}

.name {
  margin-top: 8rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}

.name .text {
  width: 55%;
  margin-left: 18rpx;
  font-size: 36rpx;
  color: black;
}

.name .icons {
  width: 25%;
}

.name .icons .icon {
  width: 36rpx;
  height: 32rpx;
}

.name .eva {
  width: 20%;
  font-size: 28rpx;
  color: #8b8b8b;
  align-items: center;
}

.addr {
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}

.addr .icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 18rpx;
}

.addr .txt {
  width: 100%;
  font-size: 28rpx;
  color: #8b8b8b;
  align-items: center;
}

