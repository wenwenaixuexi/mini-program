.container{
  align-items: center;
}

.good{
  width: 90%;
  padding: 10px;
  background: #fff;
  margin-top: 10px;
  align-items: center;
  border-radius: 10px;
  justify-content: center;
}

.good .name{
  font-size: 18px;
  font-weight: bold;
}

.good .imginfo{
  justify-content: center;
  margin-top: 10px;
  align-items: flex-end;
}

.good .imginfo .coverImg{
  width: 40px;
  height: 40px;
  border-radius: 6px;
  box-shadow: 3px 3px 8px #c1c1c1;
}

.good .imginfo .price{
  font-size: 14px;
  color: red;
  margin-left: 10px;
}

.good .des{
  width: 100%;
  margin-top:5px;
  font-size: 12px;
}

.good .des .left{
  min-width: 45px;
  width: 45px;
}

.good .des .right{
  color: black;
}

.container-bottom{
  height: 45px;
  align-items: center;
  justify-content: flex-end;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
}

.container-bottom .add-cart{
  height: 45px;
  line-height: 45px;
  width: 110px;
  background-color: #24a504;
  color: #fff;
  text-align: center;
}
