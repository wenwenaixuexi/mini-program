.container-payInfo{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100px;
}

.container-payInfo .icon_order{
  width: 120px;
  height: 120px;
}

.container-payInfo .info{
  display: flex;
  flex-direction: row;
  margin-top: 15px;
}

.container-payInfo .info .money{
  color: red;
  margin-left: 15px;
}

.container-payInfo .pay{
  width: 60%;
  line-height: 40px;
  background: linear-gradient(to bottom,rgb(240,48,247),rgb(247,244,90));
  border-radius: 10px;
  box-shadow: 0 0 8px #c1c1c1;
  color: white;
  text-align: center;
  margin-top: 50px;
}