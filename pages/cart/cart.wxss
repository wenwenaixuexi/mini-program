.container{
  align-items: center;
}
.container-good{
  width: 90%;
  background: #fff;
  border-radius: 8px;
  padding: 10px;
  margin-top: 10px;
}

.container-good .left{
  align-items: center;
}

.container-good .left .selected{
  background: rgb(50, 185, 9);
  color: white;
  width: 20px;
  height: 20px;
  min-width: 20px;
  min-height: 20px;
  border-radius: 50%;
  text-align: center;
  border: 1px solid rgb(50, 185, 9);
}

.container-good .left .unSelected{
  color: white;
  width: 20px;
  height: 20px;
  min-width: 20px;
  min-height: 20px;
  border-radius: 50%;
  text-align: center;
  border: 1px solid #c1c1c1;
}

.container-good .left .coverImg{
  width: 100px;
  height: 100px;
  border-radius: 8px;
  box-shadow: 3px 3px 5px #c1c1c1;
  margin-left: 5px;
}

.container-good .right{
  flex-grow: 1;
  margin-left: 10px;
}

.container-good .right .name{
  font-weight: bold;
}

.container-good .right .price{
  color: #f40;
  margin-top: 10px;
  margin-bottom: 5px;
}
.container-good .right .text-hui{
  color: grey;
  margin-top: 3px;
  margin-bottom: 5px;
  font-size:12px;
}

.container-good .container-operate{
  position: absolute;
  right: 20px;
  bottom: 10px;
  border-radius: 4px;
  width: auto;
  background:#fff;
  overflow: hidden
}

.container-good .container-operate .minus,
.container-good .container-operate .add,
.container-good .container-operate .count{
  width: 25px;
  height: 25px;
  min-width: 25px;
  min-height: 25px;
  font-size: 16px;
  text-align: center;
}

.container-good .container-operate .minus{
  border:1px solid #c1c1c1;
  background:rgb(224,224,224);
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px
}

.container-good .container-operate .add{
  border:1px solid #c1c1c1;
  background:rgb(224,224,224);
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px
}

.container-good .container-operate .count{
  border-top:1px solid #c1c1c1;
  border-bottom:1px solid #c1c1c1;
  color: #f40
}

.container-bottom{
  height: 45px;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
}

.container-bottom .selectAll{
  margin-left:10px;
}

.container-bottom .right{
  height: 45px;
  align-items: center;
  width: auto;
}

.container-bottom .right .price{
  margin-right: 10px;
  color: #f40;
}

.container-bottom .right .btn{
  width:120px;
  height: 45px;
  line-height: 45px;
  color: white;
  background: rgb(50, 185, 9);
  text-align: center;
}