.container{
  box-sizing: border-box;
  align-items: center;
}

.item{
  width:90%;
  background: white;
  box-sizing: border-box;
  padding: 10px;
  box-shadow: 3px 3px 8px #c1c1c1;
  margin-top: 10px;
  border-radius:8px;
  font-size: 12px;
  position: relative;
}

.item .top{
  display: flex;
  flex-direction: row;
}

.item .top text:nth-child(2){
  margin-left: 10px;
}

.item .address{
  margin-top: 10px;
}

.item .edit{
  width: 20px;
  height: 20px;
  position: absolute;
  right: 22px;
  bottom: 0px;
  padding: 15px;
}

.container-add{
  position: fixed;
  right: 0;
  bottom: 30px;
  padding: 14px;
  border-top-left-radius: 50%;
  border-bottom-left-radius: 50%;
  background: linear-gradient(to right,rgb(43,12,35),rgb(243,235,160));
  text-align: center;
  color: white;
}