.my-modal2 {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.5);
}

.my-modal {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.5);
}

.my-modal view:first-child {
  width: 90%;
  background-color: #fff;
  border-radius: 6px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  padding-top: 15px;
  overflow: hidden;
}

.my-modal view .title {
  font-weight: bold;
}

.my-modal view .content {
  margin: 15px 15px 0px 15px;
  color: #c1c1c1;
}

.my-modal view .try-again {
  margin-top: 15px;
  width: 100%;
  font-size: 17px;
  font-weight: bold;
  text-align: center;
  line-height: 60px;
  color: #425887;
  background-color: #fff;
  border-top: 1px solid#f6f6f6;
}

.my-modal view .singleBtn {
  margin-top: 15px;
  width: 100%;
  font-size: 17px;
  font-weight: bold;
  text-align: center;
  line-height: 60px;
  color: #425887;
  background-color: #fff;
  border-top: 1px solid#f6f6f6;
}

.my-modal view .singleBtn::after {
  border: none;
}
